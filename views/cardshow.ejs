<script>
// Function to fetch and update room count
async function updateRoomCount() {
  try {
    const response = await axios.get('/api/users/countrooms');
    const totalRooms = document.getElementById('totalRooms');
    totalRooms.textContent = response.data.count;
    // Remove loading text by directly setting the count
    
  } catch (error) {
    console.error('Error fetching room count:', error);
    const totalRooms = document.getElementById('totalRooms');
    totalRooms.textContent = 'Error';
  }

}

// Call the function when page loads
document.addEventListener('DOMContentLoaded', updateRoomCount);

</script>
