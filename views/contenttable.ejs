<div class="container mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="text-2xl font-bold mb-4">User Data</h2>
    
    <div class="overflow-x-auto">
      <table id="userTable" class="min-w-full bg-white">
        <thead>
          <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
            <th class="py-3 px-6 text-left">Room</th>
            <th class="py-3 px-6 text-left">Electricity Before</th>
            <th class="py-3 px-6 text-left">Electricity After</th>
            <th class="py-3 px-6 text-left">Water Before</th>
            <th class="py-3 px-6 text-left">Water After</th>
            <th class="py-3 px-6 text-left">Total Amount</th>
            <th class="py-3 px-6 text-left">Actions</th>
          </tr>
        </thead>
        <tbody id="userTableBody" class="text-gray-600 text-sm">
          <!-- Data will be populated dynamically -->
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
// Function to fetch and display users
async function fetchUsers() {
  try {
    const response = await axios.get('/api/users');
    const users = response.data;
    const tbody = document.getElementById('userTableBody');
    tbody.innerHTML = '';

    if (users.length > 0) {
      users.forEach(user => {
        const tr = document.createElement('tr');
        tr.className = 'border-b border-gray-200 hover:bg-gray-100';
        tr.innerHTML = `
          <td class="py-3 px-6">${user.room}</td>
          <td class="py-3 px-6">${user.fire_unitbefore}</td>
          <td class="py-3 px-6">${user.fire_unitafter}</td>
          <td class="py-3 px-6">${user.water_unitbefore}</td>
          <td class="py-3 px-6">${user.water_unitafter}</td>
          <td class="py-3 px-6">${user.total_amount}</td>
          <td class="py-3 px-6">
            <div class="flex items-center space-x-4">
              <button onclick="editUser('${user._id}')" class="text-blue-500 hover:text-blue-700">
                <i class="fas fa-edit"></i>
              </button>
              <button onclick="deleteUser('${user._id}')" class="text-red-500 hover:text-red-700">
                <i class="fas fa-trash"></i>
              </button>
            </div>
          </td>
        `;
        tbody.appendChild(tr);
      });
    } else {
      tbody.innerHTML = `
        <tr>
          <td colspan="7" class="py-3 px-6 text-center">No data available</td>
        </tr>
      `;
    }

    // Initialize DataTable
    if ($.fn.DataTable.isDataTable('#userTable')) {
      $('#userTable').DataTable().destroy();
    }
    $('#userTable').DataTable({
      responsive: true,
      autoWidth: false,
      "pageLength": 10,
      "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]
    });

  } catch (error) {
    console.error('Error fetching users:', error);
  }
}

// Function to edit user
async function editUser(userId) {
  try {
    const response = await axios.get(`/api/users/${userId}`);
    const user = response.data;
    // Redirect to edit page with user data
    window.location.href = `/edit/${userId}`;
  } catch (error) {
    console.error('Error getting user:', error);
  }
}

// Function to delete user
async function deleteUser(userId) {
  if (confirm('Are you sure you want to delete this record?')) {
    try {
      await axios.delete(`/api/users/${userId}`);
      fetchUsers(); // Refresh the table
    } catch (error) {
      console.error('Error deleting user:', error);
    }
  }
}

// Initial fetch when page loads
document.addEventListener('DOMContentLoaded', fetchUsers);
</script>
